{% comment %}
  Strongside Footer Section
  - 3-column grid: Logo/desc, Links, Social icons
  - Payment badges
  - Copyright
{% endcomment %}

<style>
  /* ============================================
     STRONGSIDE FOOTER - INLINE STYLES (1.5x SIZE)
     ============================================ */

  .ss-footer {
    background-color: rgba(0, 0, 0, 0.8) !important;
    backdrop-filter: blur(12px) !important;
    -webkit-backdrop-filter: blur(12px) !important;
    border-top: 1px solid rgba(255, 255, 255, 0.05) !important;
    padding: 7.5rem 0 !important;
    position: relative !important;
    /* z-index: 20 !important; - Removed */
  }

  .ss-footer-container {
    max-width: 120rem !important;
    margin: 0 auto !important;
    padding: 0 2.25rem !important;
  }

  /* Grid Layout */
  .ss-footer-grid {
    display: grid !important;
    grid-template-columns: 1fr !important;
    gap: 3rem !important;
    align-items: center !important;
  }

  @media (min-width: 768px) {
    .ss-footer-grid {
      grid-template-columns: 1fr 1fr 1fr !important;
      gap: 0 !important;
    }
  }

  /* Column 1: Logo & Description */
  .ss-footer-brand {
    display: flex !important;
    flex-direction: column !important;
    align-items: center !important;
    gap: 1.5rem !important;
  }

  @media (min-width: 768px) {
    .ss-footer-brand {
      align-items: flex-start !important;
      justify-self: start !important;
    }
  }

  .ss-footer-logo {
    font-size: 3.15rem !important;
    font-weight: 900 !important;
    letter-spacing: -0.05em !important;
    color: white !important;
    font-style: italic !important;
  }

  .ss-footer-logo-accent {
    color: #ff2222 !important;
  }

  .ss-footer-desc {
    color: #6b7280 !important;
    font-size: 1.3rem !important;
    max-width: 30rem !important;
    text-align: center !important;
  }

  @media (min-width: 768px) {
    .ss-footer-desc {
      text-align: left !important;
    }
  }

  /* Column 2: Links */
  .ss-footer-links {
    display: flex !important;
    flex-direction: column !important;
    gap: 1.5rem !important;
    align-items: center !important;
  }

  @media (min-width: 768px) {
    .ss-footer-links {
      flex-direction: row !important;
      gap: 3rem !important;
      justify-self: center !important;
    }
  }

  .ss-footer-link {
    color: #6b7280 !important;
    font-size: 1.3rem !important;
    text-transform: uppercase !important;
    letter-spacing: 0.1em !important;
    text-decoration: none !important;
    transition: color 0.3s ease !important;
    background: none !important;
    border: none !important;
    cursor: pointer !important;
  }

  .ss-footer-link:hover {
    color: white !important;
  }

  /* Column 3: Social Icons */
  .ss-footer-social {
    display: flex !important;
    gap: 1.5rem !important;
    justify-content: center !important;
  }

  @media (min-width: 768px) {
    .ss-footer-social {
      justify-self: end !important;
    }
  }

  .ss-footer-social-link {
    width: 3.75rem !important;
    height: 3.75rem !important;
    border-radius: 50% !important;
    border: 2px solid rgba(255, 255, 255, 0.1) !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    color: #6b7280 !important;
    text-decoration: none !important;
    transition: all 0.3s ease !important;
  }

  .ss-footer-social-link:hover {
    color: white !important;
    border-color: #ff2222 !important;
    background-color: rgba(255, 34, 34, 0.1) !important;
  }

  .ss-footer-social-link.youtube:hover {
    border-color: #ff0000 !important;
    background-color: rgba(255, 0, 0, 0.1) !important;
  }

  .ss-footer-social-link.instagram:hover {
    border-color: #e1306c !important;
    background-color: rgba(225, 48, 108, 0.1) !important;
  }

  .ss-footer-social-link svg {
    width: 1.875rem !important;
    height: 1.875rem !important;
  }

  /* Payment Badges */
  .ss-footer-payment {
    display: flex !important;
    flex-direction: column !important;
    align-items: center !important;
    gap: 1.5rem !important;
    margin-top: 4.5rem !important;
  }

  .ss-footer-payment-label {
    color: #6b7280 !important;
    font-size: 1.3rem !important;
    letter-spacing: 0.1em !important;
    text-transform: uppercase !important;
  }

  .ss-footer-payment-icons {
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    gap: 1.5rem !important;
  }

  .ss-footer-payment-img {
    height: 5.5rem !important;
    width: auto !important;
    object-fit: contain !important;
    opacity: 0.6 !important;
    transition: opacity 0.3s ease !important;
  }

  .ss-footer-payment-img:hover {
    opacity: 1 !important;
  }

  .ss-footer-payment-img-small {
    height: 4.1rem !important;
  }

  /* Copyright */
  .ss-footer-copyright {
    margin-top: 3rem !important;
    padding-top: 3rem !important;
    border-top: 1px solid rgba(255, 255, 255, 0.05) !important;
    text-align: center !important;
    color: #4b5563 !important;
    font-size: 1.125rem !important;
  }

  /* LIGHT MODE OVERRIDE */
  html.strongside-light .ss-footer {
    background-color: rgba(255, 255, 255, 0.95) !important;
    border-top: 1px solid #e5e7eb !important;
  }
  html.strongside-light .ss-footer-logo {
    color: #111827 !important;
  }
  html.strongside-light .ss-footer-desc,
  html.strongside-light .ss-footer-link,
  html.strongside-light .ss-footer-social-link {
    color: #4b5563 !important;
  }
  html.strongside-light .ss-footer-link:hover,
  html.strongside-light .ss-footer-social-link:hover {
    color: #111827 !important;
  }
  html.strongside-light .ss-footer-copyright {
    color: #6b7280 !important;
    border-top: 1px solid #e5e7eb !important;
  }
</style>

<footer class="ss-footer">
  <div class="ss-footer-container">
    <!-- 3-Column Grid -->
    <div class="ss-footer-grid">
      <!-- Column 1: Brand -->
      <div class="ss-footer-brand">
        <div class="ss-footer-logo">STRONGSIDE <span class="ss-footer-logo-accent">technologies</span></div>
        <p class="ss-footer-desc">
          {{ 'strongside.footer.brandDesc' | t }}
        </p>
      </div>

      <!-- Column 2: Links -->
      <div class="ss-footer-links">
        <a href="/pages/legal" class="ss-footer-link">{{ 'strongside.footer.links.legal' | t }}</a>
        <a href="/pages/terms" class="ss-footer-link">{{ 'strongside.footer.links.cgv' | t }}</a>
        <a href="/pages/contact" class="ss-footer-link">{{ 'strongside.footer.links.contact' | t }}</a>
      </div>

      <!-- Column 3: Social -->
      <div class="ss-footer-social">
        {%- if section.settings.tiktok_url != blank -%}
          <a
            href="{{ section.settings.tiktok_url }}"
            target="_blank"
            rel="noopener noreferrer"
            class="ss-footer-social-link tiktok"
            aria-label="TikTok"
          >
            <svg fill="currentColor" viewBox="0 0 24 24">
              <path d="M19.59 6.69a4.83 4.83 0 01-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 01-5.2 1.74 2.89 2.89 0 012.31-4.64 2.93 2.93 0 01.88.13V9.4a6.84 6.84 0 00-1-.05A6.33 6.33 0 005 20.1a6.34 6.34 0 0010.86-4.43v-7a8.16 8.16 0 004.77 1.52v-3.4a4.85 4.85 0 01-1-.1z" />
            </svg>
          </a>
        {%- endif -%}
        {%- if section.settings.youtube_url != blank -%}
          <a
            href="{{ section.settings.youtube_url }}"
            target="_blank"
            rel="noopener noreferrer"
            class="ss-footer-social-link youtube"
            aria-label="YouTube"
          >
            <svg fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.498 6.186a3.016 3.016 0 00-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 00.502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 002.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 002.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z" />
            </svg>
          </a>
        {%- endif -%}
        {%- if section.settings.instagram_url != blank -%}
          <a
            href="{{ section.settings.instagram_url }}"
            target="_blank"
            rel="noopener noreferrer"
            class="ss-footer-social-link instagram"
            aria-label="Instagram"
          >
            <svg fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z" />
            </svg>
          </a>
        {%- endif -%}
      </div>
    </div>

    <!-- Payment Badges -->
    <div class="ss-footer-payment">
      <span class="ss-footer-payment-label">{{ 'strongside.footer.securePayment' | t }}</span>
      <div class="ss-footer-payment-icons">
        <img
          src="{{ 'visa mastercard.webp' | asset_url }}"
          alt="Visa Mastercard"
          class="ss-footer-payment-img"
          width="88"
          height="55"
        >
        <img
          src="{{ 'paypal logo.webp' | asset_url }}"
          alt="PayPal"
          class="ss-footer-payment-img"
          width="88"
          height="55"
        >
        <img
          src="{{ 'cb logo.webp' | asset_url }}"
          alt="CB"
          class="ss-footer-payment-img ss-footer-payment-img-small"
          width="66"
          height="41"
        >
      </div>
    </div>

    <!-- Copyright -->
    <div class="ss-footer-copyright">
      © {{ 'now' | date: '%Y' }} Strongside Technologies Inc. {{ 'strongside.footer.rights' | t }}
    </div>
  </div>
</footer>

