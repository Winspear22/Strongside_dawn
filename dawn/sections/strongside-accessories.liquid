  #shopify-section-{{ section.id }} .ss-acc-html h4 {
    font-size: 1rem !important;
    font-weight: 700 !important;
    color: rgb(var(--color-foreground)) !important;
    margin-top: 1rem !important;
    margin-bottom: 0.5rem !important;
